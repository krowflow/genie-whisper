{
  "name": "playwright-global-tools",
  "version": "1.0.0",
  "description": "Comprehensive Playwright tool suite for global use across projects",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "playwright test",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.ts\"",
    "prepare": "npm run build",
    "install-browsers": "npx playwright install",
    "docs": "typedoc --out docs tools"
  },
  "keywords": [
    "playwright",
    "testing",
    "automation",
    "browser",
    "pdf",
    "accessibility",
    "performance"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@playwright/test": "^1.40.0",
    "axe-core": "^4.8.2",
    "chart.js": "^4.4.0",
    "pdfjs-dist": "^3.11.174"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.0.3",
    "typedoc": "^0.25.3",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "playwright": "^1.40.0"
  }
}
