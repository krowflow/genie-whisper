{
  "name": "genie-whisper",
  "version": "0.1.0",
  "description": "A real-time voice-to-text transcription tool for developers",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:electron\" \"npm run dev:python\"",
    "dev:electron": "electron-forge start",
    "dev:python": "cd python && python server.py",
    "download-models": "python scripts/download_models.py",
    "download-models:all": "python scripts/download_models.py --whisper-models tiny,base,small,medium --vad",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx .",
    "test": "jest",
    "build": "tsc",
    "watch": "tsc -w",
    "postinstall": "npm run download-models"
  },
  "keywords": [
    "voice-to-text",
    "whisper",
    "transcription",
    "electron",
    "vscode",
    "cursor",
    "roo-code"
  ],
  "author": "Genie Whisper Team",
  "license": "MIT",
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "wavesurfer.js": "^7.3.0",
    "lottie-web": "^5.12.0",
    "python-shell": "^5.0.0",
    "socket.io-client": "^4.7.0",
    "tailwindcss": "^3.3.0",
    "node-notifier": "^10.0.1",
    "electron-log": "^5.0.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.2.0",
    "@types/electron": "^1.6.10",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "concurrently": "^8.0.0",
    "electron": "^28.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.2.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^5.0.0"
  }
}